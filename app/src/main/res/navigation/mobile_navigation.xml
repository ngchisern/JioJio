<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.producity.ui.myactivity.MyActivityFragment"
        android:label="@string/schedule"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_navigation_home_to_scheduleDetailFragment"
            app:destination="@id/scheduleDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.producity.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_navigation_dashboard_to_taskDetailFragment"
            app:destination="@id/taskDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.producity.ui.friends.FriendListFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/scheduleDetailFragment"
        android:name="com.example.producity.ui.myactivity.ScheduleDetailFragment"
        android:label="fragment_schedule_detail_list"
        tools:layout="@layout/fragment_schedule_detail_list">
        <argument
            android:name="title"
            android:defaultValue="No Title"
            app:argType="string" />
        <argument
            android:name="time"
            android:defaultValue="-"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/taskDetailFragment"
        android:name="com.example.producity.ui.dashboard.TaskDetailFragment"
        android:label="fragment_task_detail"
        tools:layout="@layout/fragment_task_detail">
        <argument
            android:name="taskName"
            app:argType="string" />
        <argument
            android:name="startDate"
            app:argType="string" />
        <argument
            android:name="endDate"
            app:argType="string" />
        <argument
            android:name="description"
            android:defaultValue="-"
            app:argType="string" />
    </fragment>
    

</navigation>