<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.producity.ui.myactivity.MyActivityFragment"
        android:label="@string/schedule"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_navigation_home_to_scheduleDetailFragment"
            app:destination="@id/scheduleDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_explore"
        android:name="com.example.producity.ui.explore.ExploreFragment"
        android:label="@string/explore"/>

    <fragment
        android:id="@+id/navigation_friends"
        android:name="com.example.producity.ui.friends.FriendListFragment"
        android:label="@string/friends"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/scheduleDetailFragment"
        android:name="com.example.producity.ui.myactivity.ScheduleDetailFragment"
        android:label="fragment_schedule_detail_list"
        tools:layout="@layout/fragment_schedule_detail_list">
        <argument
            android:name="title"
            android:defaultValue="No Title"
            app:argType="string" />
        <argument
            android:name="time"
            android:defaultValue="-"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.producity.ui.profile.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile" />


</navigation>