<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.producity.ui.home.HomeFragment"
        android:label="@string/schedule"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_schedule_Detail"
            app:destination="@id/schedule_Detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.producity.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.producity.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/schedule_Detail"
        android:name="com.example.producity.Schedule_Detail"
        android:label="fragment_schedule__detail"
        tools:layout="@layout/fragment_schedule__detail" />
</navigation>