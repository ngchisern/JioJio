<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sender_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/noti_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="16sp"
        android:layout_toEndOf="@id/sender_image"
        android:layout_marginTop="10dp"
        tools:text="friend_username" />

    <TextView
        android:id="@+id/noti_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/noti_message"
        android:layout_toEndOf="@id/sender_image"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="10dp"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/noti_date"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/sender_image"
        android:gravity="center|start"
        android:weightSum="10">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:backgroundTint="@android:color/holo_green_dark"
            android:elevation="10dp"
            android:text="Cancel"
            app:cornerRadius="20dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/accept_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:backgroundTint="@android:color/holo_green_dark"
            android:elevation="10dp"
            android:text="Accept"
            app:cornerRadius="20dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/tick_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_baseline_check_24"/>

</RelativeLayout>