<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="hViewModel"
            type="com.example.producity.ui.myactivity.MyActivityViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f7ff">

        <RelativeLayout
            android:id="@+id/welcome_card"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                app:civ_border_width="1dp"
                app:civ_border_color="#FF000000"/>

            <TextView
                android:id="@+id/welcome_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Hello, ALEX"
                android:layout_toEndOf="@id/profile_image"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dp"
                android:layout_marginStart="15dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/welcome_wishlist"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignBottom="@id/welcome_noti"
                android:layout_alignEnd="@id/welcome_noti"
                android:src="@drawable/ic_baseline_favorite_24"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp" />

            <ImageView
                android:id="@+id/welcome_noti"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_notifications_black_24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:tint="#ffd600" />

        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#e0e0e0"
            app:layout_constraintTop_toBottomOf="@id/welcome_card"/>

