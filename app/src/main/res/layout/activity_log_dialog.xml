<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/log_dialog_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Ingredients"
            android:textSize="20sp"
            android:layout_marginStart="10dp"/>


        <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_green_light">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp">

                <ImageView
                    android:id="@+id/op_image_dialog"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_launcher_background"/>

                <TextView
                    android:id="@+id/op_name_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/op_image_dialog"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:textSize="20dp"
                    android:text="Li Xue"/>

                <ImageView
                    android:id="@+id/priority_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_priority_high_24"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/log_dialog_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Big Fat Chicken"
                    android:layout_below="@id/op_image_dialog"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="10dp"/>


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>